{% from 'macros/icon.njk' import icon %}

{% macro card(heading_level, link, title, colour, date, tags, content, modifiers) %}

  <article class="relative group bg-zinc-700/30 p-6 transition hover:brightness-115 md:p-8 {{ modifiers }}">

    <a href="{{ link }}" class="absolute top-0 left-0 h-full w-full z-10"></a>

    <{{ heading_level | safe }} class="m-0 text-xl">{{ title }}</{{ heading_level | safe }}>

    <div class="flex flex-col justify-center my-3 sm:flex-row sm:justify-normal">

      <div class="flex place-items-center mb-1.5 sm:mb-0">

        {{ icon('calendar-03-duotone-rounded', [colour, 'w-6 min-w-6'].join(' ')) }}

        <span class="ml-2 mr-3 text-zinc-400">{{ date }}</span>

      </div>

      <div class="flex place-items-center">

        {{ icon('tags-duotone-rounded', [colour, 'w-6 min-w-6'].join(' ')) }}

        <span class="ml-2 text-zinc-400">{{ tags }}</span>

      </div>

    </div>

    <p class="m-0 text-base">{{ content }}</p>

    <span class="{{ colour }} absolute bottom-4 right-8 inline-block w-8 h-8 opacity-0 group-hover:opacity-100 group-hover:translate-x-4 transition">

      {% include '../img/icons/arrow-right-02-bulk-rounded.svg' %}

    </span>

  </article>

{% endmacro %}